---
import { Card, CardContent } from "@/components/ui/card";
import { Construction, Hammer, CircleAlert } from "@lucide/astro";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "P치gina en Construcci칩n",
  description = "Estamos trabajando en esta secci칩n. Pronto estar치 disponible.",
} = Astro.props;
---

<div class='flex items-center justify-center min-h-[60vh] p-4 w-full h-full'>
  <Card className='max-w-md w-full'>
    <CardContent className='p-8 text-center space-y-6'>
      {/* Animated icon group */}
      <div class='relative inline-block'>
        <div class='absolute inset-0 bg-primary/10 rounded-full blur-2xl'></div>
        <div class='relative bg-primary/5 rounded-full p-6 inline-block'>
          <Construction class='h-16 w-16 text-primary' stroke-width={1.5} />
        </div>
        {/* Floating decorative icons */}
        <div
          class='absolute -top-2 -right-2 bg-background border-2 border-primary/20 rounded-full p-2 animate-bounce'
        >
          <Hammer class='h-5 w-5 text-primary' />
        </div>
        <div
          class='absolute -bottom-2 -left-2 bg-background border-2 border-primary/20 rounded-full p-2 animate-pulse'
        >
          <CircleAlert class='h-5 w-5 text-primary' />
        </div>
      </div>

      {/* Text content */}
      <div class='space-y-2'>
        <h2 class='text-2xl font-semibold text-foreground'>{title}</h2>
        <p class='text-muted-foreground text-balance'>
          {description}
        </p>
      </div>

      {/* Progress indicator */}
      <div class='space-y-2'>
        <div class='flex justify-between text-sm text-muted-foreground'>
          <span>Progreso</span>
          <span>En desarrollo</span>
        </div>
        <div class='h-2 bg-muted rounded-full overflow-hidden'>
          <div class='h-full w-1/3 bg-primary rounded-full animate-pulse'></div>
        </div>
      </div>
    </CardContent>
  </Card>
</div>
