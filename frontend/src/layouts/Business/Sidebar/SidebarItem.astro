---
import type { Role } from "../../../api/types/Enums/Role";
import type { Pathname } from "../../../config/Pathname";
import { cn } from "../../../lib/utils";
import { type Icon as IconType } from "@lucide/astro";

interface Props {
  name: string;
  href: Pathname;
  icon: typeof IconType;
}

const { name, href, icon: Icon } = Astro.props as Props;

const isActive = Astro.url.pathname === href;
---

<a
  href={href}
  class={cn(
    "nav-item flex items-center gap-3 rounded-lg px-3 py-2.5 text-sm font-medium transition-colors",
    isActive
      ? "bg-sidebar-accent text-sidebar-accent-foreground"
      : "text-sidebar-foreground hover:bg-sidebar-accent/50 hover:text-sidebar-accent-foreground"
  )}
>
  <Icon class='h-5 w-5' />
  {name}
</a>
