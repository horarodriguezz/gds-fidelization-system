---
import { CircleCheck, CircleX, Store } from "@lucide/astro";
import { Button } from "@/components/ui/button";
import { APP_NAME } from "@/config/app";
import { Pathname } from "../../../../config/Pathname";

interface Props {
  success: boolean;
  title: string;
  message: string;
}

const { success, title, message } = Astro.props;
---

<div
  class='min-h-screen flex items-center justify-center p-8 bg-linear-to-br from-primary/5 via-background to-primary/5'
>
  <div class='w-full max-w-md'>
    <div class='flex items-center justify-center gap-3 mb-12'>
      <div
        class='w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center shrink-0'
      >
        <Store class='w-7 h-7 text-primary' />
      </div>

      <span class='text-2xl font-bold'>{APP_NAME}</span>
    </div>

    <div class='bg-card border rounded-lg p-8 text-center shadow-lg'>
      <div class='flex justify-center mb-6'>
        {
          success ? (
            <div class='w-20 h-20 bg-green-100 dark:bg-green-900/30 rounded-full flex items-center justify-center'>
              <CircleCheck class='w-12 h-12 text-green-600 dark:text-green-500' />
            </div>
          ) : (
            <div class='w-20 h-20 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center'>
              <CircleX class='w-12 h-12 text-red-600 dark:text-red-500' />
            </div>
          )
        }
      </div>

      <h1 class='text-2xl font-bold mb-4 text-balance'>
        {title}
      </h1>

      <p class='text-muted-foreground mb-8 leading-relaxed'>
        {message}
      </p>

      <a href={Pathname.LOGIN}>
        <Button className='w-full h-11' size='lg'> Ir al Login </Button>
      </a>
    </div>
  </div>
</div>
